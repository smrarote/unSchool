{
  "name": "unschool",
  "version": "1.0.0",
  "description": "Video based interactive learning platform for lerners",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "build": "npx tsc",
    "prod": "cross-env NODE_ENV=prod npx tsc && node build/server.js",
    "dev": "cross-env NODE_ENV=dev npx tsc --watch & nodemon build/server.js",
    "debug": "node --inspect-brk=127.0.0.1:9200 build/server.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll",
    "doc": "npx typedoc --out documentation",
    "lint": "eslint app/**/*.ts --fix",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smrarote/unSchool.git"
  },
  "keywords": [
    "learning",
    "video",
    "encoder"
  ],
  "author": "Sameer Arote",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/smrarote/unSchool/issues"
  },
  "homepage": "https://github.com/smrarote/unSchool#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "dotenv-safe": "^8.2.0",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "moment": "^2.29.4",
    "path": "^0.12.7",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.9.0",
    "@types/request": "^2.48.12",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typedoc": "^0.25.3",
    "typescript": "^5.2.2"
  }
}
